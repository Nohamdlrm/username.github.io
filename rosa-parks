<script>
/* CONFIRMATION MAINTENANCE */
function deactivateMaintenance(){
showLogin();
}

function loginAdmin(){
const user=document.getElementById('login-user').value;
const pass=document.getElementById('login-pass').value;
if(user==='campusrp' && pass==='campus123'){
adminConnected=true;
closeLogin();
document.querySelector('.btn-login').style.display='none';
document.querySelector('.btn-logout').style.display='inline-block';
document.getElementById('news-form').style.display='block';
document.getElementById('btn-maintenance').style.display='inline-block';
if(maintenanceActive){
document.getElementById('confirm-maintenance').style.display='flex';
} else alert("Connexion r√©ussie !");
} else alert("Identifiant ou mot de passe incorrect !");
}

function confirmDisableMaintenance(choice){
document.getElementById('confirm-maintenance').style.display='none';
if(choice){
maintenanceActive=false;
maintenanceOverlay.style.display='none';
alert("Maintenance d√©sactiv√©e ‚úÖ");
}
}
</script>

